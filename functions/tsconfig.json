{
  "compilerOptions": {
    "module": "NodeNext",                  // Mudei de CommonJS para ESNext
    "esModuleInterop": true,             // Permite importar módulos CommonJS de forma compatível
    "moduleResolution": "nodenext",      // Para resolver módulos corretamente em ESM
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",                  // Não alterei isso, pois está adequado para ESM
    "skipLibCheck": true                 // Ignora checagens de tipo em bibliotecas (opcional, mas ajuda)
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
